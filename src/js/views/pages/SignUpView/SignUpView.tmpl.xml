<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="view signup-view">
        <fest:include src="../../../components/blocks/navBar/NavBar.tmpl.xml"/>

        <div class="signup__error"> </div>

        <div class="signup__form">
            <form class="form">
                <div class="form__field">
                    <input class="form__field-input" type="email" name="email"
                           placeholder="Enter your e-mail..."/>
                    <input class="form__field-input" type="text" name="username"
                           placeholder="Enter your password..."/>
                    <input class="form__field-input" type="password" name="password"
                           placeholder="Enter your password..."/>
                    <input class="form__field-input" type="password" name="password-confirm"
                           placeholder="Confirm password..."/>
                </div>

                <button class="button_text submit-button" type="submit">
                    Sign up
                </button>
            </form>
        </div>

        <div class="please-login">
            Have an account?
            <div class="please-login__ref">
                <a>login</a>
            </div>
        </div>

    </div>
</fest:template>