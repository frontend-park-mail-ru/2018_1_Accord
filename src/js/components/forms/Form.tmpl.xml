<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <form class="form">
        <div class="form__fields">
            <fest:for iterate="data.form" index="i" value="v">
                <div class="form__field">
                    <input class="form__field-input" type="{v.type}" name="{v.name}"
                           placeholder="{v.placeholder}"/>
                </div>
            </fest:for>
        </div>

        <button class="button_text submit-button" type="submit">
            <fest:value>data.submitText</fest:value>
        </button>
    </form>
</fest:template>