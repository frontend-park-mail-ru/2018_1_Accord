<fest:template xmlns:fest="http://fest.mail.ru">
    <div class="view login-view">

        <fest:include src="../../../components/blocks/navBar/NavBar.tmpl.xml"/>

        <div class="login__error"> </div>

        <div class="login__form">
            <form class="form">
                <div class="form__field">
                    <input class="form__field-input" type="email" name="email"
                           placeholder="Enter your e-mail..."/>
                    <input class="form__field-input" type="password" name="password"
                           placeholder="Enter your password..."/>
                </div>

                <button class="button_text submit-button" type="submit">
                    Login
                </button>
                <div class="validation-error"> </div>
            </form>
        </div>

        <div class="please-signup">
            If you haven't account yet, please
            <div class="please-signup__ref">
                <a>sign up</a>
            </div>
        </div>

    </div>
</fest:template>