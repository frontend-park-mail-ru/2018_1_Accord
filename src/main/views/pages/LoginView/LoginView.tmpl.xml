<fest:template xmlns:fest="http://fest.mail.ru" context_name="data">
    <div class="view login-view">

        <fest:include src="../../../components/blocks/navBar/NavBar.tmpl.xml"/>

        <div class="menu bubbles">
            <div class="menu-center-block">
                <div class="lowermenu">
                    <div class="title__up">
                        Donuts Wars
                        <a></a>
                    </div>

                    <div class="login__error title__sub-error"></div>
                    <div class="login__form">
                        <form class="form">
                            <div class="validation-error"> </div>

                            <div class="form__field input_block">
                                <input class="form__field-input" type="email" name="email"
                                    placeholder="Enter your e-mail"/>
                            </div>
                            <div class="form__field input_block">
                                <input class="form__field-input" type="password" name="password"
                                    placeholder="Enter your password"/>
                            </div>

                            <div class="mainmenu__button">
                                <button class="button_text submit-button mainmenu__button-button" type="submit">
                                    Login
                                </button>
                            </div>
                        </form>
                    </div>

                        <div class="go-to-sigup">
                            If you haven't account yet, just 
                            <a href="{data.signUpPath}">
                                <div class="go-to-sigup__button">
                                     sign up
                                </div>
                            </a>
                        </div>
                </div>
            </div>
        </div>
    </div>
</fest:template>